{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
  },
  "ts-node": {
    "esm": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "test",
    "webpack.config.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
